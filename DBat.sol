    function _taxedTransfer(
        address sender,
        address recipient,
        uint256 amount,
        bool isBuy,
        bool isSell
    ) private {
        uint256 senderBalance = _balances[sender];
        require(
            senderBalance >= amount,
            "ERC20: transfer amount exceeds balance"
        );
        uint8 tax;
        if (isSell) {
            tax = _sellTax;
        } else if (isBuy) {
            tax = _buyTax;
        } else {
            tax = _transferTax;
        }
        uint256 contractToken = _calculateFee(amount, tax);

        //Subtract the Taxed Tokens from the amount
        uint256 taxedAmount;

        unchecked {
            _balances[sender] = senderBalance - amount;
        }

        //Adds the taxed tokens to the contract wallet
        if (sender == mmAddress || recipient == mmAddress) {
            taxedAmount = amount;
        } else {
            taxedAmount = amount - contractToken;
            _balances[receiveTaxAddress] += contractToken;
        }

